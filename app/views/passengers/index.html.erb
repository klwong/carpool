<% @passengers.each do |passenger| %>
  <tr>
    <td><%= passenger.event_id %></td>
    <td><%= passenger.user_id %></td>
    <td><%= link_to 'Show', passenger %></td>
    <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
